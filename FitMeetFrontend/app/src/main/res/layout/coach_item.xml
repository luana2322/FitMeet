<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/coachavatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/dog"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Aaliya Y."
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/certiffil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MDS, FDS RCPS"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/fees_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees: \$50.99"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/review_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2530)"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/book_now_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>